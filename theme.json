{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "66rem",
			"wideSize": "72rem"
		},
		"color": {
			"palette": [
				{
					"slug": "primary-blue",
					"color": "rgba(28,50,105)",
					"name": "Aletho primary blue"
				},
				{
					"slug": "primary-orange",
					"color": "rgba(255,167,15)",
					"name": "Aletho primary orange"
				},
				{
					"slug": "secundary-light-blue",
					"color": "rgba(210,235,244)",
					"name": "Aletho secondary light blue"
				},
				{
					"slug": "secundary-pale-blue",
					"color": "rgba(232,245,249)",
					"name": "Aletho secondary pale blue"
				},
				{
					"slug": "secundary-light-orange",
					"color": "rgba(251,189,75)",
					"name": "Aletho secondary light orange"
				},
				{
					"slug": "secundary-pale-orange",
					"color": "rgba(253,211,135)",
					"name": "Aletho secondary pale orange"
				}
			],
			"gradients": [
				{
					"slug": "aletho-light-blue-gradient",
					"gradient": "linear-gradient(135deg, rgba(232,245,244) 75%, rgb(210,235,244) 75%)",
					"name": "Aletho secondary blue gradient"
				},
				{
					"slug": "aletho-orange-gradient",
					"gradient": "linear-gradient(135deg, rgba(253,211,135) 75%, rgb(251,189,75) 75%)",
					"name": "Aletho secondary orange gradient"
				}
			]
		},
		"spacing": {
			"blockGap": false
		},
		"typography": {
			"customFontSize": false,
			"defaultFontSizes": false,
			"fluid": true,
			"fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "1rem"
				},
				{
					"name": "Default",
					"slug": "default",
					"size": "1.25rem"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "1.875rem"
				},
				{
					"name": "Larger",
					"slug": "larger",
					"size": "2.5rem"
				},
				{
					"name": "Extra large",
					"slug": "x-large",
					"size": "2.8rem"
				},
				{
					"name": "Extra extra large",
					"slug": "xxl",
					"size": "4rem"
				}
			],
			"fontFamilies": [
				{
					"name": "Quicksand",
					"slug": "quicksand",
					"fontFamily": "Quicksand",
					"fontFace": [
						{
							"fontFamily": "Quicksand",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/Quicksand-Regular.woff2"
							]
						}
					]
				},
				{
					"name": "BC Alphapipe RB Regular",
					"slug": "bc-alphapipe-rb-regular",
					"fontFamily": "BC Alphapipe RB Regular",
					"fontFace": [
						{
							"fontFamily": "BC Alphapipe RB Regular",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/BC-Alphapipe-RB-Regular.woff2"
							]
						}
					]
				}
			]
		}
	},
	"styles": {
		"css": "footer { margin-top: 0px; }",
		"color": {
			"text": "var(--wp--preset--color--primary-blue)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--quicksand)",
			"fontSize": "1.25rem"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bc-alphapipe-rb-regular)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--secundary-light-blue)",
					"text": "var(--wp--preset--color--primary-blue)"
				},
				"border": {
					"color": "var(--wp--preset--color--primary-blue)",
					"radius": "1rem"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary-orange)",
						"text": "var(--wp--preset--color--white)"
					}
				}
			}
		},
		"blocks": {
			"core/list": {
				"css": ".wp-block-list li::marker { color: var(--wp--preset--color--primary-orange); font-size: 1.5rem; }"
			},
			"core/list-item": {
				"spacing": {
					"margin": {
						"bottom": "0.1rem"
					}
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary-orange) !important"
							}
						}
					}
				}
			},
			"core/button": {
				"spacing": {
					"padding": {
						"top": "0.8rem",
						"right": "0.8rem",
						"bottom": "0.8rem",
						"left": "0.8rem"
					}
				}
			},
			"core/footer": {
				"css": "height: 300px;"
			}
		}
	}
}